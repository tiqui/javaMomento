import javax.swing.JButton;
import javax.swing.JFrame;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JLabel;
import javax.swing.JPasswordField;
import javax.swing.JTextField;
public class TesteGUI 
{
    public static void main(String[] args) {
        
        //Nome da Janela
        JFrame janela = new JFrame("Login: Usuario e Senha");
        
        //JLabel é pra adicionar textos na janela
        JLabel LabelUsuario = new JLabel("Usuario");
        LabelUsuario.setBounds(50, 50, 100, 30); //.setBounds é pra adicionar as dimensoes da coisa (X, Y, Largura, Altura).
        
        JLabel LabelSenha = new JLabel("Senha");
        LabelSenha.setBounds(50, 150, 100, 30);//.setBounds serve pra praticamente tudo que for adicionado.
        
        //JTextField serve pra escrever coisas dentro de uma caixa
        JTextField CampoUser = new JTextField();
        CampoUser.setBounds(50, 80, 150, 30);
        
        //Esse PasswordField serve pra Ocultar as coisas dentro da caixa
        JPasswordField campoSenha = new JPasswordField();
        campoSenha.setBounds(50, 180, 150, 30);


        
        //Botao.
        //Formato e Acao do botao.
        JButton botaoLogin = new JButton("Login");
        botaoLogin.setBounds(50, 210, 100, 30);
        
        //Adiciona uma ação ao apertar o botão.
        botaoLogin.addActionListener(e -> {
               String usuario = CampoUser.getText();
               String senha = new String(campoSenha.getPassword());
               System.out.printf("Usuario: %s\nSenha: %s", usuario, senha);
        });
        
        //Adicione o elemento na sua JFrame, se não adicionar não vai aparecer.
        janela.add(botaoLogin);
        janela.add(LabelUsuario);
        janela.add(CampoUser);
        janela.add(campoSenha);
        janela.add(LabelSenha);
        
        //Tipo do layout pra janela, você encontra no link anexado a postagem.
        janela.setLayout(null);
        
        
        //Janela, formato e comportamento
        janela.setBounds(0, 0, 400, 300);
        janela.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);//Pra quando voce apertar no X ela fechar de verdade.
        janela.setVisible(true);//Pra janela aparecer na sua tela.
                  
    }
}
