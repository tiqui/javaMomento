package Testes;

import javax.swing.*;
import java.awt.event.*;
import java.io.*;

public class BlocoDeNotas extends JFrame implements ActionListener {
    
    private JTextArea areaTexto;
    private JFileChooser seletorArquivos;

    public BlocoDeNotas() {
        super("Bloco de Notas by Flavio");
        
        // 1. Configurar a Janela (JFrame)
        setSize(800, 600);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        
        // 2. Criar a Área de Texto (JTextArea)
        areaTexto = new JTextArea();
        add(new JScrollPane(areaTexto)); // Adiciona scrollbar, se necessário
        
        // 3. Criar o Menu
        JMenuBar barraMenu = new JMenuBar();
        JMenu menuArquivo = new JMenu("Arquivo");
        
        JMenuItem itemNovo = new JMenuItem("Novo");
        JMenuItem itemAbrir = new JMenuItem("Abrir");
        JMenuItem itemSalvar = new JMenuItem("Salvar");
        JMenuItem itemSair = new JMenuItem("Sair");
        
        // Adicionar Listeners (para saber quando o item é clicado)
        itemNovo.addActionListener(this);
        itemAbrir.addActionListener(this);
        itemSalvar.addActionListener(this);
        itemSair.addActionListener(this);
        
        // Montar o Menu
        menuArquivo.add(itemNovo);
        menuArquivo.add(itemAbrir);
        menuArquivo.add(itemSalvar);
        menuArquivo.addSeparator();
        menuArquivo.add(itemSair);
        
        barraMenu.add(menuArquivo);
        setJMenuBar(barraMenu);
        
        // Inicializar o seletor de arquivos
        seletorArquivos = new JFileChooser();
        
        setVisible(true);
    }
    
    // 4. Lidar com os Cliques do Menu
    public void actionPerformed(ActionEvent e) {
        String comando = e.getActionCommand();
        
        if (comando.equals("Novo")) {
            areaTexto.setText("");
            setTitle("Bloco de Notas em Java, chupa marcelo D2");
            
        } else if (comando.equals("Sair")) {
            System.exit(0);
            
        } 
        // Futuramente vou colocar as lógicas de Abrir e Salvar aqui
        // usando o JFileChooser e classes de IO (BufferedReader, FileWriter)
    }

    public static void main(String[] args) {
        // Garantir que a GUI seja executada na thread de eventos (isso aqui é super recomendado em swing)
        SwingUtilities.invokeLater(() -> new BlocoDeNotas());
    }
}
